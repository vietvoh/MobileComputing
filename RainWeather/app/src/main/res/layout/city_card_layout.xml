<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">
    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:layout_height="wrap_content" android:id="@+id/relLay1" android:layout_weight="0.04">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Ho Chi Minh"
            android:id="@+id/cityTextView"
            android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:textIsSelectable="false"
            android:textColor="@color/cityNameColor" android:layout_toLeftOf="@+id/temperatureTextView"
            android:layout_toStartOf="@+id/temperatureTextView"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="36 *C"
            android:layout_marginLeft="10dp"
            android:id="@+id/temperatureTextView"
            android:textColor="@color/degreesBlueColor"
            android:layout_centerVertical="true" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="27 November 2014 16:00"
            android:id="@+id/updatedAtTextView" android:layout_below="@+id/cityTextView"
            android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
            android:textColor="@color/lastUpdateColor" android:layout_alignRight="@+id/cityTextView"
            android:layout_alignEnd="@+id/cityTextView"/>
    </RelativeLayout>
</LinearLayout>